<div class="container">
  <div class="col-sm-6 col-sm-offset-3">
    <h1><strong><%= @restaurant.name %></strong></h1>

    <p>
      <strong>Address :</strong>
      <%= @restaurant.address %>
    </p>

    <p>
      <strong>Category :</strong>
      <%= @restaurant.category %>
    </p>
    <p>
      <strong>Phone Number :</strong>
      <%= @restaurant.phone_number %>
    </p>
  </div>
</div>

<div class="text-center">
  <%= link_to 'Edit', edit_restaurant_path(@restaurant), class: "btn-primary" %>|
  <%= link_to 'Back to All Restaurants', restaurants_path, class: "btn-primary"  %>
  |
  <%= link_to 'See Reviews', restaurant_reviews_path(@restaurant), class: "btn-primary"  %>
  |
  <%= link_to 'Add a Review', new_restaurant_review_path(@restaurant), class: "btn-primary"  %>
</div>

