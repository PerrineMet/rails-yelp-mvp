<%= simple_form_for(@restaurant) do |f| %>
  <%= f.error_notification %>
<div class="container">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :category, collection: Restaurant::CATEGORY %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  </div>
</div>
<% end %>
