<div class="text-center">
  <h1>New Review</h1>
</div>
<div class="container padded">
  <div class="row">
    <div class="col-sm-12">
      <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: Review::RATING%>
      <%= f.submit "add a review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <%= link_to "Back to reviews", restaurant_reviews_path, class: "btn btn-primary"%>
    </div>
    <div class="col-sm-6">
        <%= link_to 'Back to restaurant', restaurant_path(params[:restaurant_id]), class: "btn btn-primary" %>
    </div>
  </div>
</div>
